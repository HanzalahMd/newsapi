<form class="mt-2" method="GET" action="/search">
    <div class="form-group">
        <label for="search">News Search</label>
        <input type="text" name="search" class="form-control" id="search" placeholder="Please enter your search here">
    </div>
    <div class="flag mt-3 text-center">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="us" value="us">
            <label class="form-check-label" for="us"><img src="/images/us.png" alt=""></label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="uk" value="uk">
            <label class="form-check-label" for="uk"><img src="/images/uk.png" alt=""></label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="fr" value="fr">
            <label class="form-check-label" for="fr"><img src="/images/fr.png" alt=""></label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="sg" value="sg">
            <label class="form-check-label" for="sg"><img src="/images/sg.png" alt=""></label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="jp" value="jp">
            <label class="form-check-label" for="jp"><img src="/images/jp.png" alt=""></label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="country" id="cn" value="cn">
            <label class="form-check-label" for="cn"><img src="/images/cn.png" alt=""></label>
        </div>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Category</label>
        <select class="form-control" id="exampleFormControlSelect1" name="category">
            <option>business</option>
            <option>entertainment</option>
            <option>general</option>
            <option>health</option>
            <option>science</option>
            <option>sports</option>
            <option>technology</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Submit</button>



</form>